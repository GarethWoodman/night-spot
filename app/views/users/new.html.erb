<div class='main-content'>
  <h1>Registration</h1>
  <p>Please enter your account information</p>
  <div>
    <%= form_for @user, :url => {:controller => 'users', :action => 'create'} do |f| %>
      <%= f.text_field :username, placeholder: 'Username' %>
      <br>
      <%= f.text_field :email, placeholder: 'email'%>
      <br>
      <%= f.text_field :password, placeholder: 'Password' %>
      <br>
      <%= f.password_field :password_confirmation, placeholder: 'Confirm Password', :style => "margin-right: 1px;"%>
      <br>
      <br>
      <div>
        <%= f.submit 'Create', class: 'btn btn-primary ace-blue' %>
      </div>
    <% end %>
  </div>
